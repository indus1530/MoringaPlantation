            <!-- pid     -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVpid"
                style="@style/cardView"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_pid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_pid"
                            android:text="@string/pid" />

                        <TextView
                            android:id="@+id/q_pid"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_pid"
                            android:layout_alignBottom="@id/qtxt_pid"
                            android:text="@string/Q_pid" />

                    </RelativeLayout>


                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/pid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textDirection="ltr"
                        android:hint="##-###-#####"
                        android:inputType="number"
                        app:mask="##-###-#####"
                        app:maxValue="500"
                        app:minValue="1"
                        app:pattern="[0-9]{2}-[0-9]{3}-[0-9]{5}"
                        app:type="range" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


