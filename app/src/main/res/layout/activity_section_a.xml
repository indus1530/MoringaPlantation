                    </RelativeLayout>

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/mf107"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="@string/mf107"
                        app:mask="##"
                        app:maxValue="500"
                        app:minValue="1"
                        app:type="range" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


