            <!-- mf101     -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVmf101"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_mf101"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_mf101"
                            android:text="@string/mf101" />

                        <TextView
                            android:id="@+id/q_mf101"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_mf101"
                            android:layout_alignBottom="@id/qtxt_mf101"
                            android:text="@string/Q_mf101" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


